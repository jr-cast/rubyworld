<div
  id="forgot-password" 
  class="col-lg-6 d-flex flex-column justify-content-center align-items-center px-3 w-100" 
  style="height: 100vh;"
>
  <div 
    id="card-forgot-pass" 
    class="card shadow">
    <div class="card-header">
        <h2 class="text-center display-5 fw-bold p-2">Forgot your password? ðŸ˜¿</h2>
    </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": "false", method: :post }) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email, class: "mb-2" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-md mb-3" %>
            </div>

            <div class="actions">
              <%= f.submit "Resend password instructions", class: "btn btn-danger btn-lg mb-3 w-100" %>
            </div>
          <% end %>

          <%= render "users/shared/links" %>
        </div>
    </div>
</div>
    
