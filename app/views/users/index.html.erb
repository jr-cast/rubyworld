<%= render "shared/nav" %>

<div class="users-container">
  <ul class="p-0 pt-2">
    <% @users.order(posts_counter: :desc).each do |user|%>
      <%= link_to user_path(user.id), {:style=>'color:black; text-decoration: none;'} do %>
        <li 
          class="post-card d-flex justify-content-between align-center border border-black list-unstyled mb-2 p-4 bg-white"
          style="box-shadow: 0 0 25px 0 rgba(0, 0, 0, 0.15);"
        >
          <div class="profile-pic d-flex flex-column justify-content-start mr-4">
            <img src=<%= user.photo %> alt="profile-picture" class="rounded" style="width: 150px; heigth: auto"/>
          </div>
          <div class="user-data d-flex flex-column justify-content-between" style="width: 50%;">
            <h1 class="m-0 text-danger"><%= user.name %></h1>
            <p class="m-0"><%= user.bio %></p>
              <% if user.posts_counter == nil %>
              <% user.posts_counter = 0 %>
              <% end %>
            <h4 class="m-0">Posts: <%= user.posts_counter %></h4>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
