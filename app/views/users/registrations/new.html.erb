<div class="col-lg-6 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2 class="text-center">Sign Up</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email, class: 'mb-2' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-md mb-2" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'mb-2' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-md mb-2" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: 'mb-2' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-md mb-3" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-primary btn-lg mb-3' %>
        </div>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>

