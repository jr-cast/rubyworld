<%= render "shared/nav" %>

<div 
  class="new-post d-flex justify-content-center align-items-center"
  style="height: 97vh;"
>
  <div class="card shadow">
    <div class="card-header">
      <h2 class="text-center m-0 p-2">Add a Comment 📝</h2>
    </div>
    <div class="card-body">
      <%= form_with model: new_comment, url: user_post_comments_path, method: :post, local: true, scope: :comment do |f| %>
        
          <div>
            <%= f.label :text, class: "fs-4 fw-bold text-danger" %><br>
            <%= f.text_area :text, class: "form-control form-control-md mb-2", style: "height:11.5em; width: 100%;", placeholder: "Your comment here..." %>
          </div>
        
        <div class="actions">
          <%= f.submit "Create Comment", class: "fs-3 fw-bold btn btn-danger p-3 px-5 w-100" %>
        </div>
      <% end %>
    </div>
  </div>
 </div>

