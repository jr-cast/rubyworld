<%= turbo_frame_tag "modal" do %>
  <div class="position-absolute top-50 start-50 translate-middle">
    <div 
      class="card shadow" 
      style="width: 100%; height: 250px;">
      <div 
        class="card-w card-body d-flex align-items-center justify-content-center"
      >
        <div class="card-title">
          <h1 class="mb-4 text-center fs-1 fw-bold">Delete this comment permanently?</h1>

          <div class="d-flex justify-content-around">

            <%= button_to "YES", user_post_comment_path(@post.user_id, @post.id, @comment.id), 
              method: :delete, data: {turbo: false}, 
              class: "btn btn-danger",
              style: "padding-left: 0.5em; padding-right: 0.5em; width: 155px" 
            %>
            <%= button_to "NO", user_post_path(@post.user_id, @post.id), 
              method: :get, data: {turbo: false}, 
              class: "btn btn-danger",
              style: "padding-left: 0.5em; padding-right: 0.5em; width: 155px" 
            %>
          </div>

        </div>
      </div>   
    </div>
  </div>
<% end %>